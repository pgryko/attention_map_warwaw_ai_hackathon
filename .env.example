# Copy this file to .env and fill in the values
# cp .env.example .env

# OpenAI API Key (required for AI classification)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Django Secret Key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (set to 0 in production)
DEBUG=1

# Database (defaults work with docker-compose)
DATABASE_URL=postgis://postgres:postgres@localhost:5432/attention_map  # pragma: allowlist secret

# Redis (defaults work with docker-compose)
REDIS_URL=redis://localhost:6379/0

# MinIO / S3 Storage (defaults work with docker-compose)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=events
MINIO_USE_SSL=false
