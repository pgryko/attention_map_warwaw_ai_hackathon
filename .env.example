# Copy this file to .env and fill in the values
# cp .env.example .env

# OpenRouter API Key (required for AI classification)
# Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# OpenRouter Model (default: claude-3.5-haiku for fast classification)
# Options: anthropic/claude-3.5-haiku, google/gemini-flash-1.5, openai/gpt-4o-mini, mistralai/mistral-7b-instruct
OPENROUTER_MODEL=anthropic/claude-3.5-haiku

# Groq API Key (optional, for fast Whisper transcription)
# Get your key at https://console.groq.com/keys
GROQ_API_KEY=gsk_your-groq-api-key-here

# Django Secret Key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (set to 0 in production)
DEBUG=1

# Database (defaults work with docker-compose)
DATABASE_URL=postgis://postgres:postgres@localhost:5432/attention_map  # pragma: allowlist secret

# Redis (defaults work with docker-compose)
REDIS_URL=redis://localhost:6379/0

# MinIO / S3 Storage (defaults work with docker-compose)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=events
MINIO_USE_SSL=false
